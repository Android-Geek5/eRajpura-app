<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    card_view:cardCornerRadius="@dimen/search_item_radius"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_item_height"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_item_height"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:id="@+id/lowerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin8"
            android:paddingRight="@dimen/margin8"
            android:paddingTop="@dimen/margin3"
            android:paddingBottom="@dimen/margin3"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlack"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hangover Restuarant"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text16"
                  />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <ImageView
                            android:id="@+id/imageView_location"
                            android:layout_width="@dimen/drawable_icon_width_height_small"
                            android:layout_height="@dimen/drawable_icon_width_height_small"
                            android:padding="@dimen/margin3"
                            android:src="@drawable/marker_accent" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imageView_location"
                            android:gravity="center_vertical"
                            android:text="118,Piccadilly | 20m "
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/text12" /></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/info_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin10"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/imageView_info"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/info_accent" />

                    <TextView
                        android:id="@+id/info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView_info"
                        android:gravity="center_vertical"
                        android:text="Pizza | Italian "
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/text10" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/offer_icon_height_width"
                android:visibility="gone"
                android:layout_height="@dimen/offer_icon_height_width"
                >
                <ImageView
                    android:id="@+id/image_offer"
                    android:layout_width="@dimen/offer_icon_height_width"
                    android:layout_height="@dimen/offer_icon_height_width"
                    android:src="@drawable/offer_icon"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/offers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:text="3  \n offers"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text10"/>
            </RelativeLayout>
        </LinearLayout>
     </RelativeLayout>
    </android.support.v7.widget.CardView>